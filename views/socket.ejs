    function setCurrentState(currState){
        currentState = currState;
    }

    function getCurrentState(){
        $.ajax({
            url: "/currentState",
            method: "POST",
            data: "",
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            success: function(xhr){
                setCurrentState(xhr);
                console.log("Ajax has succeeded");
            },
            error: function(xhr){
                console.log("Some ajax errors");
            }
        })
        console.log(currentState);
        return false;
    }

    function fillUserImage() { //получает картинку текущего пользователя
        getCurrentState();
        //console.log(currentState);
        //currentState = JSON.parse(currentState);
        clearFilling();
        setTimeout(function(){
            for (var obj of currentState) {
                obj = JSON.parse(obj);
                if (uloginParameters.uid == obj.uid) {
                    building.fillElement(obj.id, obj.color);
                }
            }
        }, 1000); //можно увеличить таймер, если вдруг не успеет принять данные с сервера
    }


</script>